@page "{id:int}"
@model HUIT2022.Pages.PostModel
@{
}

<div>
    <div>
        <h2>@Model.Article.Title</h2>
    </div>
    <div>
        <span>@Model.Article.GetTimeString()</span>
    </div>
    <div>
        @(Html.Raw(Model.Article.Body))
    </div>
    <hr />

    <h3>コメント</h3>
    @foreach (var comment in Model.Comments)
    {
        <h4>@comment.UserName</h4>
        @(Html.Raw(comment.CommentBody))
    }

</div>

<hr />

<h3>コメントを残す</h3>

<form method="post" id="inputForm">
    <label id="userNameLabel">投稿者名</label>
    <input asp-for="Comment.UserName" id="userNameInput" type="text" />
    <label id="contentLabel">本文</label>
    <textarea asp-for="Comment.CommentBody" id="contentInput"></textarea>
    <input type="submit" value="コメントを投稿" id="submitButton" />
</form>

<style>
    #inputForm {
        display: grid;
        grid-template-rows: repeat(auto,3);
        grid-template-columns: auto 1fr;
        padding: 6px;
    }

    #userNameLabel {
        grid-row: 1;
        grid-column: 1;
    }

    #userNameInput {
        grid-row: 1;
        grid-column: 2;
    }

    #contentLabel {
        grid-row: 2;
        grid-column: 1;
    }

    #contentInput {
        grid-row: 2;
        grid-column: 2;
    }

    #submitButton {
        grid-row: 3;
        grid-column: 1/3;
    }

</style>
